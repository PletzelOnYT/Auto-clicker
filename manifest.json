{
  "manifest_version": 3,
  "name": "Auto Clicker",
  "version": "1.0",
  "description": "Automatically clicks a selected element at regular intervals.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Clicker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
